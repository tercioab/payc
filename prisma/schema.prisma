// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  subName  String?
  cpf      Int       @unique
  email    String    @unique
  password String
  account  Account[]
  address  Address[]
}

model Address {
  id       Int    @id @default(autoincrement())
  cep      Int
  city     String
  state    String
  district String
  street   String
  number   Int
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
}

model Account {
  id      Int  @id @default(autoincrement())
  balance Int
  acount  Int
  agency  Int? @default(0001)
  User    User @relation(fields: [userId], references: [id])
  userId  Int
}
