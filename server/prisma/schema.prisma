// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  subName  String?
  cpf      String     @unique
  email    String     @unique
  password String
  account  Account?
  address  Address?
  historic Historic[]
}

model Historic {
  id           Int      @id @default(autoincrement())
  transferTo   String?
  receivedFrom String?
  amount       Int
  date         DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
}

model Address {
  id       Int    @id @default(autoincrement())
  cep      Int
  city     String
  state    String
  district String
  street   String
  number   Int
  user     User   @relation(fields: [userId], references: [id])
  userId   Int    @unique
}

model Account {
  id      Int    @id @default(autoincrement())
  balance Int    @default(0)
  acount  Int
  agency  String @default("0001")
  User    User   @relation(fields: [userId], references: [id])
  userId  Int    @unique
}

model Token {
  id       Int    @id @default(autoincrement())
  hash     String
  username String
  email    String
}